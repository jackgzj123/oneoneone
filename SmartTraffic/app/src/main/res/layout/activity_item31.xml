<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.Item31Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4a9fdc">

        <ImageView
            android:id="@+id/lgb2_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/change" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="天气信息"
            android:textColor="#fff"
            android:textSize="45dp" />

        <ImageView
            android:id="@+id/item31_shuaxin"
            android:layout_width="50dp"
            android:layout_height="450dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/refresh" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/item31_weather"
            android:layout_width="70dp"
            android:layout_height="81dp"
            android:src="@mipmap/sun"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="象山"
            android:paddingLeft="500dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item31_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="2019年12月17日" />
        <TextView
            android:id="@+id/item31_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:text="周二" />
        <TextView
            android:id="@+id/item31_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="17度"
            android:paddingLeft="250dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="预报" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:background="#5ABDEE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item31_jintian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="17日（今天）"
                android:textSize="20sp"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_jintian_weatherImg"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/w001"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_jintian_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="晴"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/item31_jintian_weatherTem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="21/12°"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:background="#5ABDEE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item31_mintian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="18日（明天）"
                android:textSize="20sp"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_mintian_weatherImg"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/w001"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_mintian_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="晴"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/item31_mintian_weatherTem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="21/12°"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:background="#5ABDEE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item31_houtian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="17日（今天）"
                android:textSize="20sp"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_houtian_weatherImg"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/w001"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_houtian_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="晴"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/item31_houtian_weatherTem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="21/12°"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:background="#5ABDEE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item31_dahoutian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="17日（今天）"
                android:textSize="20sp"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_dahoutian_weatherImg"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/w001"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_dahoutian_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="晴"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/item31_dahoutian_weatherTem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="21/12°"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:background="#5ABDEE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item31_fivetian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="17日（今天）"
                android:textSize="20sp"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_fivetian_weatherImg"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/w001"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/item31_fivetian_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="晴"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/item31_fivetian_weatherTem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="21/12°"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>