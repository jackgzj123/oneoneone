<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.Item15Activity">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#3544A5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="89dp"
            android:layout_height="66dp"
            android:src="@mipmap/change"/>
        <TextView
            android:layout_marginLeft="200dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:text="路况查询"/>
    </LinearLayout>

    <RelativeLayout
        android:background="@mipmap/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/item15_shuaxin"
            android:layout_width="48dp"
            android:layout_height="57dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:src="@mipmap/zhongzhuan" />

        <TextView
            android:id="@+id/item15_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="150dp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/item15_shuaxin"
            android:text="2019-12-5"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/item15_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="170dp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/item15_shuaxin"
            android:layout_below="@+id/item15_date"
            android:text="星期四"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/item15_wendu"
            android:layout_below="@+id/item15_shuaxin"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-16dp"
            android:layout_marginRight="55dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度："
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item15_wen"
                android:text="17°"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/item15_shidu"
            android:layout_below="@+id/item15_wendu"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相对湿度："
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item15_shi"
                android:text="58%"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/item15_pm25"
            android:layout_below="@+id/item15_shidu"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5："
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item15_pm2"
                android:text="29ug/m3"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/daolu"
            android:layout_below="@id/item15_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="200dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="道路拥堵程度示意："/>

        <ImageView
            android:id="@+id/item15_jiaojing1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="90dp"
            android:layout_width="93dp"
            android:layout_height="105dp"
            android:background="@mipmap/jiaojing1_1" />
        <ImageView
            android:id="@+id/item15_jiaojing2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_width="93dp"
            android:layout_height="105dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/jiaojing2_1" />

        <TextView
            android:id="@+id/yanzhongyongdu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daolu"
            android:layout_marginTop="6dp"
            android:text="严重拥堵"
            android:layout_alignLeft="@+id/daolu"
            android:layout_marginLeft="30dp"
            android:textColor="#000000" />
        <View

            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_below="@+id/daolu"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/yanzhongyongdu"
            android:background="#b01e23"/>
        <TextView
            android:id="@+id/zhongduyongdu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yanzhongyongdu"
            android:layout_marginTop="6dp"
            android:text="中度拥堵"
            android:layout_alignLeft="@+id/daolu"
            android:layout_marginLeft="30dp"
            android:textColor="#000000" />
        <View

            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_below="@+id/yanzhongyongdu"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/zhongduyongdu"
            android:background="#e33532"/>
        <TextView
            android:id="@+id/yibanyongdu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zhongduyongdu"
            android:layout_marginTop="6dp"
            android:text="一般拥堵"
            android:layout_alignLeft="@+id/daolu"
            android:layout_marginLeft="30dp"
            android:textColor="#000000" />
        <View

            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_below="@+id/zhongduyongdu"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/zhongduyongdu"
            android:background="#f49b25"/>
        <TextView
            android:id="@+id/huanxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yibanyongdu"
            android:layout_marginTop="6dp"
            android:text="缓行"
            android:layout_alignLeft="@+id/daolu"
            android:layout_marginLeft="30dp"
            android:textColor="#000000" />
        <View

            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_below="@+id/yibanyongdu"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/zhongduyongdu"
            android:background="#ece93a"/>
        <TextView
            android:id="@+id/changtong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/huanxing"
            android:layout_marginTop="6dp"
            android:text="畅通"
            android:layout_alignLeft="@+id/daolu"
            android:layout_marginLeft="30dp"
            android:textColor="#000000" />
        <View

            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_below="@+id/huanxing"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/zhongduyongdu"
            android:background="#6ab82e"/>

    </RelativeLayout>


</LinearLayout>