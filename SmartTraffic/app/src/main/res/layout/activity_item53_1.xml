<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.item53activity.Item53_1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4a9fdc">

        <ImageView
            android:id="@+id/lgb2_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/left_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购物车"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/item53_1_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="管理"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="使用日期"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/edtt20"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_marginLeft="300dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item53_1_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天04/21"
                android:textColor="#B8ACAC"
                android:textSize="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预订"
                android:textColor="#B8ACAC"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item53_1_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天04/22"
                android:textColor="#000"
                android:textSize="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预订"
                android:textColor="#000"
                android:textSize="25dp" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多日期"
            android:textColor="#000"
            android:textSize="25dp" />
        <ImageView
            android:id="@+id/item53_1_right"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"/>
    <LinearLayout
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="产品名称"/>
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="简介"/>
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="数量"/>
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="价格"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item53_1_lin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:visibility="gone"
                android:id="@+id/item53_1_deletetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textStyle="bold"
                android:textColor="#E71717"
                android:textSize="25dp" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="135dp"
                android:layout_height="67dp"
                android:src="@mipmap/palace" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故宫"
                android:textColor="#000"
                android:textSize="25dp" />
        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="北京故宫是中国明清..."
            android:textColor="#000"
            android:textSize="25dp" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/item53_1_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="—"
                android:textSize="25sp"
                android:background="@drawable/edtt5"/>
                <TextView
                    android:id="@+id/item53_1_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:text="2"
                android:gravity="center"
                android:textSize="25sp"
                android:background="@drawable/edtt5"/>
            <Button
                android:id="@+id/item53_1_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="+"
                android:textSize="25sp"
                android:background="@drawable/edtt5"/>
        </LinearLayout>
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:text="60元"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000"
            android:text="总金额："/>
        <TextView
            android:id="@+id/item53_1_totalpay"
            android:layout_toRightOf="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000"
            android:text="120"/>
        <TextView
            android:layout_toRightOf="@+id/item53_1_totalpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000"
            android:text="元"/>
        <TextView
            android:id="@+id/item53_1_clear"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000"
            android:background="#fff"
            android:text="清空购物车"/>
        <TextView
            android:id="@+id/item53_1_pay"
            android:gravity="center"
            android:layout_toLeftOf="@+id/item53_1_clear"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="30sp"
            android:textColor="#fff"
            android:background="@drawable/edtt21"
            android:text="立即支付"/>
    </RelativeLayout>
</LinearLayout>