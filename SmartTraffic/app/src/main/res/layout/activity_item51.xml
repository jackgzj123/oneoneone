            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item51_weather3"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/sun"/>

        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#C2BCBC"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item51_dayname4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="昨天"/>
            <TextView
                android:id="@+id/item51_daytime4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="04/20"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item51_weather4"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/sun"/>

        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#C2BCBC"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item51_dayname5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="昨天"/>
            <TextView
                android:id="@+id/item51_daytime5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="04/20"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item51_weather5"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/sun"/>

        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#C2BCBC"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item51_dayname6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="昨天"/>
            <TextView
                android:id="@+id/item51_daytime6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="04/20"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/item51_weather6"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:src="@mipmap/sun"/>
        </LinearLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/item51_linechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>