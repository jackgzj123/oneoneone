<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.item32activity.Item32Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4a9fdc">

        <ImageView
            android:id="@+id/lgb2_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/change" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="二维码支付"
            android:textColor="#fff"
            android:textSize="45dp" />

        <ImageView
            android:id="@+id/item31_shuaxin"
            android:layout_width="50dp"
            android:layout_height="450dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/theme_toolbar_btn_cleardata_normal0" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="生成付款二维码"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="车辆编号："
            android:textStyle="bold"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/item32_caoid"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp"
            android:hint="1-4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="付款金额："
            android:textStyle="bold"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/item32_moneypay"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="元"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="二维码更新周期："
            android:textStyle="bold"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/item32_refresh"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="秒"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/item32_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#85C7E7"
        android:textColor="#ffffff"
        android:text="生  成"
        android:textStyle="bold"
        android:textSize="30dp"/>

</LinearLayout>