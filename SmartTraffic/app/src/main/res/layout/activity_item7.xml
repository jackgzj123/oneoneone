<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.Item7Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4a9fdc"
        >
        <ImageView
            android:id="@+id/lgb2_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/change"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆违章"
            android:textColor="#fff"
            android:textSize="45dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item7_video"
            android:layout_marginLeft="20dp"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="违章视频"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/tvstyle1"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/item7_img"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="违章图片"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/tvstyle"
            android:textSize="40sp" />
    </LinearLayout>
    <View
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <RelativeLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true" />
</LinearLayout>