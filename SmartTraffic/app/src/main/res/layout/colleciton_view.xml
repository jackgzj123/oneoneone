<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <!--内容区域放置布局-->

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/touxiang_1"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="用户名："
                    android:textSize="23sp"/>
                <TextView
                    android:id="@+id/collection_view_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="XXX"
                    android:textSize="23sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="姓名："
                    android:textSize="23sp"/>
                <TextView
                    android:id="@+id/collection_view_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="XXX"
                    android:textSize="23sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="电话:"
                    android:textSize="23sp"/>
                <TextView
                    android:id="@+id/collection_view_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="13804110001"
                    android:textSize="23sp"/>
            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/collection_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="2019.12.27 11:12"
            android:textSize="23sp"/>

        <LinearLayout
            android:layout_marginLeft="320dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#F5CF3C"
                android:gravity="center"
                android:text="一般管理员"
                android:textColor="#000000"
                android:textSize="23sp" />
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edtt9"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="已收藏"
                android:textColor="#000000"
                android:textSize="23sp" />
        </LinearLayout>

        <!--内容区域放置布局结束-->

    </LinearLayout>
</LinearLayout>