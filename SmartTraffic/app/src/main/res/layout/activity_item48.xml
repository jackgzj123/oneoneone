<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.Item48Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4a9fdc">

        <ImageView
            android:id="@+id/lgb2_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/left_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="违章分析"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="30dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item48_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/calendar"/>

        <TextView
            android:id="@+id/item48_tv1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/edtt9"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/item48_liebiao1"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:src="@mipmap/a"
            android:background="@drawable/edtt9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:text="至"
            android:textSize="25sp"
            android:textColor="#000"/>
        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/item48_tv2"
            android:layout_width="200dp"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="match_parent"
            android:background="@drawable/edtt9"/>

        <ImageView
            android:id="@+id/item48_liebiao2"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:src="@mipmap/a"
            android:background="@drawable/edtt9"/>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/item48_linechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>