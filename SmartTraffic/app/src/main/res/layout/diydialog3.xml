<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#8F8B8B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#000000"
            android:text="配置设置"/>
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:text="红灯："
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/diylog3_hong"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edtt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="3"
            android:hint="30"
            android:textColor="#000000" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="秒"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="黄灯："/>
        <EditText
            android:id="@+id/diylog3_huang"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edtt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="3"
            android:hint="30"
            android:textColor="#000000" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="秒"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="绿灯："/>
        <EditText
            android:id="@+id/diylog3_lv"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edtt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="3"
            android:hint="30"
            android:textColor="#000000" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="秒"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/edtt1"
            android:id="@+id/diylog3_savebtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="确定"/>
        <Button
            android:layout_marginLeft="20dp"
            android:background="@drawable/edtt1"
            android:id="@+id/diylog3_quitbtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>