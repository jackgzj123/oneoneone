<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edtt9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zfm_1_lv_roadName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edtt9"
            android:gravity="center"
            android:text="路口"
            android:textColor="#000" />

        <TextView
            android:id="@+id/zfm_1_lv_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edtt9"
            android:gravity="center"
            android:text="红灯时长（S）"
            android:textColor="#000" />

        <TextView
            android:id="@+id/zfm_1_lv_yellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edtt9"
            android:gravity="center"
            android:text="黄灯时长（S）"
            android:textColor="#000" />

        <TextView
            android:id="@+id/zfm_1_lv_green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edtt9"
            android:gravity="center"
            android:text="绿灯时长（S）"
            android:textColor="#000" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edtt9">

            <CheckBox
                android:id="@+id/zfm_1_lv_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edtt9">

            <Button
                android:id="@+id/zfm_1_lv_btn_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="设置" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>