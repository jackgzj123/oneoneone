<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.JiankongActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#3544A5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="89dp"
            android:layout_height="66dp"
            android:src="@mipmap/change"/>
        <TextView
            android:layout_marginLeft="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:text="监控抓拍"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jiankong_wei1"
            android:layout_width="226dp"
            android:layout_height="148dp"
            android:src="@mipmap/weizhang01" />

        <ImageView
            android:id="@+id/jiankong_wei2"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/weizhang02" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jiankong_wei3"
            android:layout_width="227dp"
            android:layout_height="147dp"
            android:src="@mipmap/weizhang03" />

        <ImageView
            android:id="@+id/jiankong_wei4"
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/weizhang04" />
    </LinearLayout>

    <Button
        android:id="@+id/jiankong_back"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:background="@drawable/btnstyle"/>
</LinearLayout>